<Page x:Class="VehicleMaintenanceLog.pMaintenanceMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VehicleMaintenanceLog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pMaintenanceTaskMenu">

    <Grid>
        
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10, 0, 0, 0">
                <Grid Width="175" Margin="5">
                    <TextBlock Text="Vehicle Type:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <ComboBox x:Name="cbVehicleTypeSelection" SelectionChanged="cbVehicleType_SelectionChanged" VerticalContentAlignment="Center" Height="30" Width="100" Margin="20, 0, 0, 0" HorizontalAlignment="Right"/>
                </Grid>
                
                <Grid Width="150" Margin="5">
                    <TextBlock Text="Vehicle:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <ComboBox  x:Name="cbVehicleSelection" SelectionChanged="cbVehicle_SelectionChanged" VerticalContentAlignment="Center" Height="30" Width="100" Margin="20, 0, 0, 0" HorizontalAlignment="Right"/>
                </Grid>

                <Grid x:Name="gShowHiddenCheckBox" Width="100" Margin="5">
                    <TextBlock Text="Show Hidden" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <CheckBox x:Name="chbShowHidden" Checked="chbShowHidden_Checked" Unchecked="chbShowHidden_Unchecked" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10"/>
                </Grid>

            </StackPanel>


            <ListView x:Name="lvMaintenanceMenu" Grid.Row="1" Margin="40,10,40,10" SelectionMode="Single" GridViewColumnHeader.Click="lvMaintenanceMenuHeader_Click" Background="#FFD6DADF">
                <ListView.View>
                    <GridView x:Name="gvMaintenanceMenu"/>
                </ListView.View>
            </ListView>

            <StackPanel x:Name="spMenuButtons" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">

                <Button x:Name="bCreateTask" Content="Create Task" Click="bCreateTask_Click" Width="100" Margin="5"/>
                <Button x:Name="bCreateSchedule" Content="Create Schedule" Click="bCreateSchedule_Click" Width="100" Margin="5"/>
                <Button x:Name="bEditSchedule" Content="Edit Schedule" Click="bEditSchedule_Click" Width="100" Margin="5"/>
                <Button x:Name="bCreateLog" Content="Create Log" Click="bCreateLog_Click" Width="100" Margin="5"/>
                <Button x:Name="bEditLog" Content="Edit Log" Click="bEditLog_Click" Width="100" Margin="5"/>
                <Button x:Name="bDeleteItem" Content="Delete" Click="bDeleteItem_Click" Width="100" Margin="5"/>
                
            </StackPanel>

        </Grid>

    </Grid>
</Page>

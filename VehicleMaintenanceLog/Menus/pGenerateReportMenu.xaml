<Page x:Class="VehicleMaintenanceLog.Menus.pGenerateReportMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VehicleMaintenanceLog.Menus"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pGenerateReportMenu">

    <Grid Margin="15" Width="300" HorizontalAlignment="Left">

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">

            <Grid Margin="5">
                <TextBlock Text="Report Name" Margin="0, 0, 90, 0"/>
                <TextBox x:Name="tbReportName" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
            </Grid>

            <Grid Margin="5">
                <TextBlock Text="Report Type" Margin="0, 0, 90, 0"/>
                <ComboBox x:Name="cbReportType" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
            </Grid>

            <Grid Margin="5">
                <TextBlock Text="Vehicle" Margin="0, 0, 90, 0"/>
                <ComboBox x:Name="cbVehicle" ItemsSource="{Binding Vehicles}" DisplayMemberPath="VehicleName" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
            </Grid>
            
        </StackPanel>

        <Button Content="Generate Report" Click="btnGenerateReport_Click" Grid.Row="2" Width="200" Height="40"/>

    </Grid>
</Page>

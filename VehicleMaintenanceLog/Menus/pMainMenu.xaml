<Page x:Class="VehicleMaintenanceLog.Menus.pMainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VehicleMaintenanceLog"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pMainMenu"
      SizeChanged="Window_SizeChanged">

    <DockPanel Margin="15">

        <Grid DockPanel.Dock="Left" MinWidth="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="75"/>
                <RowDefinition/>
                <RowDefinition MinHeight="30"/>
            </Grid.RowDefinitions>


            <ComboBox Grid.Row="0" x:Name="cbVehicleSelection" SelectionChanged="cbVehicleSelection_SelectionChanged" VerticalContentAlignment="Center" HorizontalAlignment="Left" MinWidth="100" MinHeight="20" Margin="10"/>

            <TextBlock Grid.Row="1" x:Name="tbVehicleMileage" Text="Mileage: 00000" FontSize="16" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top"/>
            <TextBox Grid.Row="1" x:Name="tbxSetMileage" PreviewTextInput="TextIsIntegerValidation" Height="30" Width="150" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" VerticalContentAlignment="Center"></TextBox>
            <Button Grid.Row="1" x:Name="bUpdateMileage" Content="Update Mileage" Click="bUpdateMileage_Click" Height="30" Width="100" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"></Button>

            <TextBlock Grid.Row="2" x:Name="tbVehicleManufactureDate" Text="Manufacture Date: 00/00/0000" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>

            <Grid Grid.Row="3" VerticalAlignment="Bottom" Margin="10" MinHeight="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="bNewVehicle" Content="New Vehicle" Click="bNewVehicle_Click" Grid.Column="0" Margin="2, 0, 2, 0"/>
                <Button x:Name="bEditVehicle" Content="Edit Vehicle" Click="bEditVehicle_Click" Grid.Column="1" Margin="2, 0, 2, 0"/>
                <Button x:Name="bDeleteVehicle" Content="Delete Vehicle" Click="bDeleteVehicle_Click" Grid.Column="2" Margin="2, 0, 2, 0"/>
            </Grid>
        </Grid>

        <ListView x:Name="lvMaintenanceStatus" ItemsSource="{Binding Entries}" SelectedItem="{Binding SelectedEntry}" GridViewColumnHeader.Click="lvMaintenanceMenuHeader_Click" Margin="10" DockPanel.Dock="Right" MinWidth="200" MaxWidth="700" SelectionMode="Single" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" Background="#FFD6DADF">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Task" Width="200" DisplayMemberBinding="{Binding Path=TaskName}"/>
                        <GridViewColumn Header="Miles To Next" Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=MileageToNext}" Foreground="{Binding MileageColor}" FontWeight="DemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Complete By"  Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DateOfNext}" Foreground="{Binding DateColor}" FontWeight="DemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

    </DockPanel>

</Page>

<Page x:Class="VehicleMaintenanceLog.pScheduleDataInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VehicleMaintenanceLog"
      mc:Ignorable="d" 
      d:DesignWidth="300"
      Title="pNewTaskDataInput">

    <StackPanel Grid.Row="1" Orientation="Vertical">

        <Grid Margin="5">
            <TextBlock Text="Vehicle Type"/>
            <ComboBox x:Name="cbVehicleType" SelectionChanged="cbVehicleType_SelectionChanged" MaxWidth="200" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition MinWidth="70" MaxWidth="100"/>
                <ColumnDefinition Width="100" MaxWidth="200"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Task"/>
            <Button Content="Create Task" Grid.Column="1" Margin="5, 0, 5, 0" Height="15" Click="bCreateTask_Click" FontSize="10"/>
            <ComboBox x:Name="cbTask" Grid.Column="2" ItemsSource="{Binding Tasks}" DisplayMemberPath="TaskName" SelectedItem="{Binding SelectedTask}" HorizontalAlignment="Stretch"/>

        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Applicable Vehicle"/>
            <ComboBox x:Name="cbVehicle" ItemsSource="{Binding Vehicles}" DisplayMemberPath="VehicleName" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Mileage Increment"/>
            <TextBox x:Name="tbDefaultMileageIncrement" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right" PreviewTextInput="TextIsIntegerValidation"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Time Increment (Months)"/>
            <TextBox x:Name="tbDefaultTimeIncrement" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right" PreviewTextInput="TextIsIntegerValidation"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Schedule Notes"/>
            <TextBox x:Name="tbNotes" MinWidth="200" Height="60" HorizontalAlignment="Right" PreviewTextInput="TextIsIntegerValidation"/>
        </Grid>

    </StackPanel>
    
</Page>

<Page x:Class="VehicleMaintenanceLog.pVehicleDataInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VehicleMaintenanceLog"
      mc:Ignorable="d" 
      Title="pNewVehicleDataInput">

    
    <StackPanel Grid.Row="1" MinWidth="225" Orientation="Vertical" HorizontalAlignment="Stretch">

        <Grid Margin="5">
            <TextBlock Text="Vehicle Name" HorizontalAlignment="Left"/>
            <TextBox x:Name="tbName" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Vehicle Type" HorizontalAlignment="Left"/>
            <ComboBox x:Name="cbVehicleType" MaxWidth="200" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Vehicles Mileage" HorizontalAlignment="Left"/>
            <TextBox x:Name="tbVehicleMileage" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right" PreviewTextInput="TextIsIntegerValidation"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Manufacture Date" HorizontalAlignment="Left"/>
            <DatePicker x:Name="dpManufactureDate" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
        </Grid>



    </StackPanel>

</Page>

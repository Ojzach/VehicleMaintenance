<Page x:Class="VehicleMaintenanceLog.pLogDataInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VehicleMaintenanceLog"
      mc:Ignorable="d"
      Title="pNewLogDataInput">

    <StackPanel Grid.Row="1" MinWidth="350"  Orientation="Vertical" HorizontalAlignment="Stretch">

        <Grid Margin="5">
            <TextBlock Text="Vehicle" Margin="0, 0, 90, 0"/>
            <ComboBox x:Name="cbVehicle" SelectionChanged="cbVehicle_SelectionChanged" ItemsSource="{Binding Vehicles}" DisplayMemberPath="VehicleName" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
        </Grid>


        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition MinWidth="70" MaxWidth="100"/>
                <ColumnDefinition Width="100" MaxWidth="200"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Task Completed"/>
            <Button Content="Create Task" Grid.Column="1" Margin="5, 0, 5, 0" Height="15" Click="bCreateTask_Click" FontSize="10"/>
            <ComboBox x:Name="cbTask" Grid.Column="2" ItemsSource="{Binding Tasks}" DisplayMemberPath="TaskName" SelectedItem="{Binding SelectedTask}" HorizontalAlignment="Stretch"/>

        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Mileage"  PreviewTextInput="TextIsIntegerValidation" Margin="0, 0, 85, 0"/>
            <TextBox x:Name="tbMileage" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Date Completed" Margin="0, 0, 40, 0"/>
            <DatePicker x:Name="dpDate" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Temp Fix" Margin="0, 0, 40, 0"/>
            <CheckBox x:Name="chbTempFix" Checked="chbTempFix_Checked" Unchecked="chbTempFix_Unchecked" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        </Grid>

        <StackPanel x:Name="spTempFixInputs" Margin="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Grid Width="150" Margin="10, 0, 0, 0">
                <TextBlock Text="Miles"/>
                <TextBox x:Name="tbTempFixMiles" Width="100"  HorizontalAlignment="Right" PreviewTextInput="TextIsIntegerValidation"/>
            </Grid>

            <Grid Width="180" Margin="10, 0, 0, 0">
                <TextBlock Text="Time (Months)" HorizontalAlignment="Left"/>
                <TextBox x:Name="tbTempFixTime" Width="100" HorizontalAlignment="Right" PreviewTextInput="TextIsIntegerValidation"/>
            </Grid>
        </StackPanel>

        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Notes" HorizontalAlignment="Stretch"/>
            <TextBox Grid.Column="1" x:Name="tbNotes" Height="100" HorizontalAlignment="Stretch"/>
        </Grid>

    </StackPanel>

</Page>

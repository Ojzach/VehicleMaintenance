<Page x:Class="VehicleMaintenanceLog.pTaskDataInput"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VehicleMaintenanceLog"
      mc:Ignorable="d" 
      d:DesignWidth="300"
      Title="pNewTaskDataInput">

    <StackPanel Grid.Row="1" Orientation="Vertical">

        <Grid Margin="5">
            <TextBlock Text="Task Name"/>
            <TextBox x:Name="tbName" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Applicable Vehicle Type"/>
            <ComboBox x:Name="cbVehicleType" MaxWidth="200" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <TextBlock x:Name="txtDefaultSchedule" Text="Default Schedule-" FontWeight="Medium" Margin="5, 5, 0, 0"/>

        <Grid Margin="5">
            <TextBlock Text="Mileage Increment"/>
            <TextBox x:Name="tbDefaultMileageIncrement" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right" PreviewTextInput="TextIsIntegerValidation"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Time Increment (Months)"/>
            <TextBox x:Name="tbDefaultTimeIncrement" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right" PreviewTextInput="TextIsIntegerValidation"/>
        </Grid>

    </StackPanel>
    
</Page>

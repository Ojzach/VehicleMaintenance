<UserControl x:Class="VehicleMaintenanceLog.Views.TasksPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VehicleMaintenanceLog.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        


        <ListView  ItemsSource="{Binding TaskEntries}" SelectedItem="{Binding SelectedTask}" Grid.Row="1" Margin="10" SelectionMode="Single" Background="#FFD6DADF">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding TaskID}" Width="0"/>
                    <GridViewColumn Header="Task" DisplayMemberBinding="{Binding TaskName}" Width="150"/>
                    <GridViewColumn Header="Vehicle Type" DisplayMemberBinding="{Binding TaskVehicleType}" Width="100"/>
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding TaskDescription}" Width="200"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>


            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Column="0">
                <Button Content="Delete Task" Command="{Binding DeleteSelectedTaskCommand}" Margin="5" Width="120"/>
                <Button Content="Edit Task" Command="{Binding LoadEditTaskWindowCommand}" Margin="5" Width="120"/>
                <Button Content="New Task" Command="{Binding LoadNewTaskWindowCommand}" Margin="5" Width="120"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>

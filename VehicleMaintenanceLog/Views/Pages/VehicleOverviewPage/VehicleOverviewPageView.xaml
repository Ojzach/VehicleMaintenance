<UserControl x:Class="VehicleMaintenanceLog.Views.VehicleOverviewPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VehicleMaintenanceLog.Views"
             xmlns:vms="clr-namespace:VehicleMaintenanceLog.ViewModels"
             mc:Ignorable="d" d:Height="484" d:Width="980">

    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <Grid DockPanel.Dock="Top" Height="50">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MaxWidth="150"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid MinWidth="140" MaxWidth="200" HorizontalAlignment="Left" Grid.Column="0" Margin="10 10 0 10">
                <TextBlock Text="Vehicle" Width="50" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <ComboBox x:Name="cbVehicle" ItemsSource="{Binding Vehicles}" SelectedItem="{Binding SelectedVehicle}" DisplayMemberPath="VehicleName" VerticalAlignment="Center" VerticalContentAlignment="Center" Height="25" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
            </Grid>

            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Grid.Column="1">
                <Button Content="Maintenance Report" Margin="5" Width="120"/>
                <Button Content="View Logs" Command="{Binding LoadLogListViewCommand}" Margin="5" Width="120"/>
                <Button Content="Overview" Command="{Binding LoadMaintenanceStatusListViewCommand}" Margin="5" Width="120"/>
            </StackPanel>
        </Grid>

        <Grid DockPanel.Dock="Left" Width="250" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding SelectedVehicle.VehicleName, StringFormat='Vehicle: {0}'}" FontSize="20" Grid.Row="0" VerticalAlignment="Center"/>

            <StackPanel Grid.Row="1" Margin="20 0 0 0">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Margin" Value="0 10 0 0"/>
                    </Style>
                </StackPanel.Resources>

                <TextBlock Text="{Binding SelectedVehicle.VehicleType, StringFormat='Vehicle Type: {0}'}"/>
                <TextBlock Text="{Binding SelectedVehicle.VehicleManufactureDate, StringFormat='Manufacture Date: {0:d}'}"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="{Binding SelectedVehicle.VehicleMileage, StringFormat='Mileage: {0}'}" Grid.Column="0"/>
                    <Button Content="Update" Command="{Binding UpdateMileageShowCommand}" Grid.Column="1" Margin="4"/>
                </Grid>

                <Grid Visibility="{Binding MileageUpdateVisibility}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="{Binding UpdateMileageInput}" VerticalContentAlignment="Center" Height="20" Width="125" HorizontalAlignment="Right"/>
                    <Button Content="Submit" Command="{Binding UpdateMileageSubmitCommand}" Grid.Column="1" Margin="4"/>
                </Grid>

                <TextBlock Text="{Binding SelectedVehicle.VehicleMaintenanceProfile.ProfileName, StringFormat='Maintenance Profile: {0}'}"/>
                <TextBlock Text="VIN: 000000"/>
                

            </StackPanel>
        </Grid>

        <Grid DockPanel.Dock="Right" Margin="20">
            <Grid.Resources>
                <DataTemplate DataType="{x:Type vms:MaintenanceStatusListViewModel}">
                    <local:MaintenanceStatusListView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vms:VehicleLogsListViewModel}">
                    <local:VehicleLogsListView/>
                </DataTemplate>
            </Grid.Resources>

            <ContentControl Content="{Binding CurrentListTab}"/>

        </Grid>

    </DockPanel>
</UserControl>

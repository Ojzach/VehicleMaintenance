<UserControl x:Class="VehicleMaintenanceLog.Views.VehicleLogsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VehicleMaintenanceLog.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">

        </StackPanel>


        <ListView x:Name="lvMaintenanceMenu" ItemsSource="{Binding LogEntries}" SelectedItem="{Binding SelectedLog}" Grid.Row="1" Margin="10" SelectionMode="Single" GridViewColumnHeader.Click="lvMaintenanceMenuHeader_Click" Background="#FFD6DADF">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="0" DisplayMemberBinding="{Binding LogID}"/>
                        <GridViewColumn Header="Task" DisplayMemberBinding="{Binding LogTaskName}" Width="150"/>
                        <GridViewColumn Header="Mileage" DisplayMemberBinding="{Binding LogVehicleMileage}" Width="100"/>
                        <GridViewColumn Header="Date Completed" DisplayMemberBinding="{Binding LogDateCompleted, StringFormat='d'}" Width="100"/>
                        <GridViewColumn Header="Temp Fix" DisplayMemberBinding="{Binding LogTempFixString}" Width="100"/>
                        <GridViewColumn Header="Log Notes" DisplayMemberBinding="{Binding LogNotes}" Width="150"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel x:Name="spMenuButtons" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">

            <Button x:Name="bCreateLog" Command="{Binding LoadNewLogWindowCommand}" Content="Create Log" Width="100" Margin="5"/>
            <Button x:Name="bEditLog" Content="Edit Log" Command="{Binding LoadEditLogWindowCommand}" Width="100" Margin="5"/>
            <Button x:Name="bDeleteItem" Content="Delete" Command="{Binding DeleteSelectedLogCommand}" Width="100" Margin="5"/>

        </StackPanel>

    </Grid>
</UserControl>

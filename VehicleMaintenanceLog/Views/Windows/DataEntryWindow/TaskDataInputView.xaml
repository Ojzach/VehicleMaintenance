<UserControl x:Class="VehicleMaintenanceLog.Views.Windows.DataEntryWindow.TaskDataInputView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VehicleMaintenanceLog.Views.Windows.DataEntryWindow"
             mc:Ignorable="d" >
    <StackPanel Grid.Row="1" Orientation="Vertical">

        <Grid Margin="5">
            <TextBlock Text="Task Name"/>
            <TextBox Text="{Binding NewTask.TaskName, UpdateSourceTrigger=PropertyChanged}" MaxWidth="200" MinWidth="100" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <TextBlock Text="Applicable Vehicle Type"/>
            <ComboBox ItemsSource="{Binding VehicleTypes}" SelectedItem="{Binding NewTask.TaskVehicleType}" MaxWidth="200" MinWidth="100" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Grid>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Description" HorizontalAlignment="Stretch"/>
            <TextBox Text="{Binding NewTask.TaskDescription}" Grid.Row="1" Height="100" HorizontalAlignment="Stretch"/>
        </Grid>


    </StackPanel>
</UserControl>

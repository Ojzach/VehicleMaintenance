<Window x:Class="VehicleMaintenanceLog.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VehicleMaintenanceLog"
        mc:Ignorable="d"
        Title="MainWindow" 
        MinHeight="350" MinWidth="750" Height="450" Width="800">

    <Grid Background="#FFA1A5AC">

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Margin="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="250"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name ="txtTitle" Grid.Column="0" Text="Vehicle Maintenance" FontSize="24" VerticalAlignment="Center" Margin="5"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnCreateVehicle" Content="New Vehicle" Click="btnCreateVehicle_Click" Margin="6" MinWidth="100"/>
                <Button x:Name="btnViewTasks" Content="View Tasks" Click="btnViewTasks_Click" Margin="6" MinWidth="100"/>
                <Button x:Name="btnViewLog" Content="View Log" Click="btnViewLog_Click" Margin="6" MinWidth="100"/>
                <Button x:Name="btnBack" Content="Back" Click="btnBack_Click" Margin="6" MinWidth="100"/>
            </StackPanel>

        </Grid>

        
        

        <Frame x:Name="MainPanel" NavigationUIVisibility="Hidden" Grid.Row="1"/>


    </Grid>

</Window>
